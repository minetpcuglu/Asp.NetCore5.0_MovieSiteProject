@model AdminEditViewModel


<h1> Edit Movie</h1>
<hr />
<form method="post" asp-controller="Admin" asp-action="MovieUpdate">
    <div class="row">
        <div class="col-md-8">

            <input type="hidden" name="MovieId" value="@Model.MovieId" />
            <div class="form-group">
                <label asp-for="Title"> </label>
                <input asp-for="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Description"> </label>
                <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-info"></span>

            </div>

            <div class="form-group">
                <label asp-for="ImageUrl"> </label>
                <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl" />

            </div>
            <button type="submit" class="btn btn-primary">Submit</button>


        </div>


        <div class="col-md-4">

            @foreach (var item in (List<Genre>)ViewBag.genres)
            {

                //checked secililer gelcek
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox" 
                           name="genreIds"
                           value="@item.GenreId" 
                           id="genre_@(item.GenreId)" @(Model.SelectedGenres.Any(i => i.GenreId == item.GenreId) ? "checked" : "")>
                    <label class="form-check-label" for="genre_@(item.GenreId)">
                        @item.Name
                    </label>
                </div>
            }
        </div>

    </div>
</form>

