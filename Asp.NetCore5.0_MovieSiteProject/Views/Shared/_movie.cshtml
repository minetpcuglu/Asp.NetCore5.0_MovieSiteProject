@model Movie

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/img/@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                  <div>
                      <a class="btn btn-outline-primary"  asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId" > <b>Detail</b></a>
                   

                      
                  </div>
                </div>
            </div>
        </div>
    </div>




