@model Movie

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/img/@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                  <div>
                      <a class="btn btn-outline-primary"  asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId" > <b>Detail</b></a>
                      <a class="btn btn-outline-warning" href="/Movies/Update/@Model.MovieId"> <b>Edit</b></a>

                      <form  asp-controller="Movies" asp-action="Delete" method="post" style="display:inline;">
                          <input type="hidden" name="MovieId" value="@Model.MovieId" />
                          <input type="hidden" name="Title" value="@Model.Title" />
                          <button type="submit" class="btn btn-outline-danger"><b>Delete</b></button>
                      </form>
                  </div>
                </div>
            </div>
        </div>
    </div>




