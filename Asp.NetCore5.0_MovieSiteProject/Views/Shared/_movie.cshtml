@model Movie

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/img/@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text"><small class="text-muted">@Model.Director</small></p>
                    <p class="card-text">
                        <ul>
                            @foreach (var item in Model.Players)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>




